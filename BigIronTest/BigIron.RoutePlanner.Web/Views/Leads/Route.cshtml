@using BigIron.RoutePlanner.Domain.Services
@model RouteResult
@{
    ViewData["Title"] = "Optimized Route";
}

<div class="container mt-4">

    <h2 class="mb-4 text-primary">Optimized Visit Route</h2>

    <div class="card mb-4">
        <div class="card-body">
            <h5>
                Total Distance:
                <span class="text-success fw-bold">
                    @Model.TotalDistanceKm.ToString("0.00") km
                </span>
            </h5>
            <small class="text-muted">Based on geographic distance between coordinates.</small>
        </div>
    </div>

    

    <div class="card mb-4">

        <a asp-action="ExportCsv"
           asp-route-homeLat="@ViewBag.HomeLat"
           asp-route-homeLng="@ViewBag.HomeLng"
           class="btn btn-success mb-3">
            Download CSV
        </a>

        <div class="card-header bg-dark text-white fw-bold">
            Route Order 

        </div>

        <div class="table-responsive">

            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Lead Name</th>
                        <th>Address</th>
                        <th>Lat</th>
                        <th>Lng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stop in Model.OrderedLeads)
                    {
                        <tr>
                            <td>@stop.Id</td>
                            <td>@stop.Name</td>
                            <td>@stop.Address</td>
                            <td>@stop.Latitude</td>
                            <td>@stop.Longitude</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a asp-action="Index" asp-controller="Leads" class="btn btn-secondary mt-3">
            Back
        </a>
    </div>
</div>