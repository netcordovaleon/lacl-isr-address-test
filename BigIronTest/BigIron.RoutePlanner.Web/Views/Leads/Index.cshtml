@model BigIron.RoutePlanner.Web.Models.UploadViewModel

@{
    ViewData["Title"] = "Lead Planner";
}

<div class="container mt-5">
    <h1 class="mb-4">Lead Planner</h1>

    <p class="text-muted">
        Upload your manager’s lead list and optionally your personal lead list.
        All leads will be combined and the optimal visit order will be calculated.
    </p>


    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Index" method="post" enctype="multipart/form-data" class="mt-4">
        @Html.AntiForgeryToken()

        <div class="card shadow-sm">
            <div class="card-body">

                <!-- CSV Upload -->
                <div class="mb-3">
                    <label asp-for="LeadFile" class="form-label fw-semibold"></label>
                    <input asp-for="LeadFile" type="file" class="form-control" accept=".csv" />

                    <span asp-validation-for="LeadFile" class="text-danger"></span>
                </div>

                <!-- Home Latitude -->
                <div class="mb-3">
                    <label asp-for="HomeLat" class="form-label fw-semibold"></label>
                    <input asp-for="HomeLat" class="form-control" placeholder="40.00" />

                    <span asp-validation-for="HomeLat" class="text-danger"></span>
                </div>

                <!-- Home Longitude -->
                <div class="mb-3">
                    <label asp-for="HomeLng" class="form-label fw-semibold"></label>
                    <input asp-for="HomeLng" class="form-control" placeholder="-95.00" />

                    <span asp-validation-for="HomeLng" class="text-danger"></span>
                </div>

                <button class="btn btn-primary px-4 mt-2" type="submit">Upload & Generate Route</button>
            </div>
        </div>
    </form>
</div>

